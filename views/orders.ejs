<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Orders</title>
    <link rel="stylesheet" href="/styles/navigation_style.css" />
    <link rel="stylesheet" href="/styles/form_style.css" />
    <link rel="stylesheet" href="/styles/admin_style.css" />

    <link rel="icon" type="image/x-icon" href="/images/logo1.png" />
  </head>

  <body>
    <nav id="navbar">
      <div id="logo">
        <a href="/"> <img src="/images/logo1.png" alt="Logo" /></a>
      </div>
      <div class="nav-btn">&#9776;</div>
      <ul>
        <li><a href="/">Home</a></li>

        <% if (isAuth) { %>
        <div class="dropdown">
          <li class="dropbtn"><a>Welcome, <%= user.userName %></a></li>
          <div class="dropdown-content">
            <% if(user.role==='admin' ) {%>
            <li><a href="/admin">Admin</a></li>
            <% } %>

            <form action="/admin/logout" method="POST">
              <button class="log-out">Logout</button>
            </form>
          </div>
        </div>
        <li><a href="/cart">Cart</a></li>
        <% } else { %>
        <li><a href="/sign-up">Sign up</a></li>
        <li><a href="/log-in">Log in</a></li>
        <% } %>
      </ul>
    </nav>

    <div class="container">
      <h1>Orders List</h1>

      <h2>Admin Information</h2>
      <p><%= `Name: ${user.userName} `%></p>
      <p><%= `Email: ${user.email} `%></p>

      <hr />

      <hr>
<div class="vendorList">
  <h2>Order List</h2>
  <table id="orderTable">
    <thead id="thead">
      <tr>
        <th>Date</th>
        <th>User Name</th>
        <th>Ordered Items</th>
        <th>Total Amount</th>
        <!-- Add more headers if needed -->
      </tr>
    </thead>
    <tbody id="tbody">
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.createdAt.toDateString() %></td>
          <td><%= order.userId.userName %></td>
          <td>
            <ul>
              <% order.items.forEach(item => { %>
                <li><%= item.itemId.itemName %> (Quantity: <%= item.quantity %>)</li>
                <!-- Add more details based on your item schema -->
              <% }); %>
            </ul>
          </td>
          <td>$<%= order.totalAmount.toFixed(2) %></td>
          <!-- Add more columns based on your order schema -->
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>


    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const navBtn = document.querySelector(".nav-btn");
        const navList = document.querySelector("#navbar ul");

        navBtn.addEventListener("click", function () {
          navList.classList.toggle("show");
        });
      });
    </script>
  </body>
</html>
